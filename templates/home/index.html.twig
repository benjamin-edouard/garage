{% extends 'base.html.twig' %}

{% block title %}V. Parrot | Accueil{% endblock %}

{% block head %}
{% endblock %}

{% block body %}

    <main class="home-cover">
        <h1>Vincent Parrot</h1>
        <img src="{{ asset('assets/images/man-362150.jpg') }}" alt="Home page cover">
        <div class="home-call-action">
            <a href="{{ path('second-hand-cars') }}" class="btn btn-primary"title="">Nos véhicules d'occasions</a>
            <a href="{{ path('services') }}" class="btn btn-secondary"title="">Nos prestations</a>
        </div>
    </main>

    
    {% block contactForm %}
        <section class="garage-information">
            <article>
                <h3>Formulaire de contact</h3>
                <div class="contact-form">
                    {{ form(form) }}
                </div>
            </article>
    {% endblock %}
    
    {% block openingHours %}
            <article>
                <h3>Horaires d'ouverture</h3>
                <table class="table-opening-hours">
                    <thead>
                        <tr>
                            <th colspan="3">Matin</th><th colspan="2">Après-midi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for hour in hours %}
                            <tr>
                                <td>{{hour.getDayOfWeek()}}</td>
                                <td>{{hour.getOpenAm()|format_datetime('none', 'short', locale='fr')}}</td>
                                <td>{{hour.getCloseAm()|format_datetime('none', 'short', locale='fr')}}</td>
                                <td>{{hour.getOpenPm()|format_datetime('none', 'short', locale='fr')}}</td>
                                <td>{{hour.getClosePm()|format_datetime('none', 'short', locale='fr')}}</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td>Dimanche</td><td colspan="4">Fermé</td>
                        </tr>
                    </tbody>
                </table>
            </article>
        </section>
    {% endblock %}
{% endblock %}

